<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ToDoListV2.MainWindow"
        Title="ToDoListV2">

    <!-- Main Window content goes inside stackpanel -->
    <StackPanel Margin="20">
        <TextBlock>Welcome to TaskBuddy!</TextBlock>

        <!-- Text inputs -->
        <TextBlock Margin="0 5" >Task name:</TextBlock>
        <TextBox x:Name="taskNameInput"/>
        <TextBlock Margin="0 15 0 5">Task description</TextBlock>
        <TextBox x:Name="taskDescriptionInput" Height="100" AcceptsReturn="True" TextWrapping="Wrap"/>

        <!-- Create task button-->
        <Button Click="ClickHandler">Create task</Button>
        <TextBlock Margin="0 10" x:Name="message"></TextBlock>
    </StackPanel>

</Window>
